{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "typings",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
